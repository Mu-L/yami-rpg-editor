{
	"name": "yami-rpg-editor",
	"version": "1.0.0",
	"type": "module",
	"main": "dist/main.cjs",
	"productName": "Yami RPG Editor",
	"author": "Yami",
	"description": "2D Game Editor",
	"scripts": {
		"start": "npm run build && electron . --dirname=Project",
		"setup": "npm install",
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"prebuild:win": "npm run build",
		"prebuild:linux": "npm run build",
		"prebuild:mac": "npm run build",
		"prebuild:macArm": "npm run build",
		"prebuild:universal": "npm run build",
		"build:win": "electron-builder --dir --win --x64",
		"build:linux": "electron-builder --dir --linux --x64",
		"build:mac": "electron-builder --dir --mac --x64",
		"build:macArm": "electron-builder --dir --mac --arm64",
		"build:universal": "electron-builder --dir --mac --universal"
	},
	"devDependencies": {
		"@types/node": "^22.13.10",
		"archiver": "^7.0.1",
		"electron": "^20.3.12",
		"electron-builder": "^25.1.8",
		"rollup": "^4.12.0",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"rollup-plugin-esbuild": "^6.1.1",
		"esbuild": "^0.20.1"
	},
	"dependencies": {
		"exceljs": "^4.4.0",
		"koa": "^3.0.0",
		"mime-types": "^3.0.1",
		"qrcode": "^1.5.4",
		"sharp": "^0.34.2",
		"steamworks.js": "^0.4.0",
		"typescript": "^5.8.2",
		"xml2js": "^0.6.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yami-pro/yami-rpg-editor.git"
	},
	"build": {
		"appId": "com.open.yami.rpgeditor",
		"electronVersion": "20.3.12",
		"directories": {
			"buildResources": "Assets",
			"output": "./build"
		},
		"files": [
			{
				"from": "Project",
				"to": ".",
				"filter": [
					"**",
					"!config.json"
				]
			},
			"dist/**/*",
			"package.json",
			"icon.ico",
			"icon.icns"
		],
		"extraResources": [
			{
				"from": "dist/node_modules/typescript/lib",
				"to": "app/node_modules/typescript/lib",
				"filter": ["**/*"]
			},
			{
				"from": "Project/Templates/electron-win-x64/resources/app/node_modules",
				"to": "app/Templates/electron-win-x64/resources/app/node_modules"
			},
			{
				"from": "Project/Templates/electron-mac-universal.app/Contents/resources/app/node_modules",
				"to": "app/Templates/electron-mac-universal.app/Contents/resources/app/node_modules"
			}
		],
		"asar": false,
		"asarUnpack": [],
		"extraFiles": [],
		"nsis": {
			"oneClick": true,
			"shortcutName": "yami"
		},
		"win": {
			"icon": "icon.ico",
			"executableName": "yami",
			"verifyUpdateCodeSignature": false,
			"target": [
				"nsis",
				"zip"
			]
		},
		"mac": {
			"icon": "icon.icns",
			"x64ArchFiles": "*",
			"target": [
				"dmg",
				"zip"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		}
	}
}