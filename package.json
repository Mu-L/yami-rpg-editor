{
	"name": "yami-rpg-editor",
	"version": "1.0.0",
	"main": "main.js",
	"productName": "Yami RPG Editor",
	"author": "Yami",
	"description": "2D Game Editor",
	"scripts": {
		"start": "electron . --dirname=Project",
		"setup": "npm install",
		"build": "node scripts/build.js",
		"build:win": "electron-builder --dir --win --x64",
		"build:mac": "electron-builder --dir --mac --x64 --no-symlink",
		"build:linux": "electron-builder --dir --linux --x64",
		"build:macArm": "electron-builder --dir --mac --arm64 --no-symlink",
		"build:universal": "electron-builder --dir --mac --universal"
	},
	"devDependencies": {
		"@types/node": "^22.13.10",
		"archiver": "^7.0.1",
		"electron": "^20.3.12",
		"electron-builder": "^25.1.8"
	},
	"dependencies": {
		"steamworks.js": "^0.4.0",
		"typescript": "^5.8.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yami-pro/yami-rpg-editor.git"
	},
	"build": {
		"appId": "com.open.yami.rpgeditor",
		"electronVersion": "20.3.12",
		"directories": {
			"buildResources": "Assets",
			"output": "./build"
		},
		"files": [
			{
				"from": "Project",
				"to": ".",
				"filter": [
					"**",
					"!config.json"
				]
			},
			"main.js",
			"package.json",
			"dist/**/*",
			"src/**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,test,*.ts}"
		],
		"extraResources": [
			{
				"from": "node_modules/typescript/lib",
				"to": "app/node_modules/typescript/lib"
			}
		],
		"asar": true,
		"asarUnpack": [
			"Templates/**",
			"**/node_modules/typescript/**"
		],
		"extraFiles": [],
		"nsis": {
			"oneClick": true,
			"shortcutName": "yami",
			"installerIcon": "icon.ico",
			"uninstallerIcon": "icon.ico",
			"allowToChangeInstallationDirectory": true,
			"allowElevation": true,
			"perMachine": true,
			"createDesktopShortcut": true
		},
		"win": {
			"icon": "icon.ico",
			"executableName": "yami",
			"verifyUpdateCodeSignature": false,
			"target": [
				"zip"
			]
		},
		"mac": {
			"icon": "icon.icns",
			"x64ArchFiles": "*",
			"target": [
				"zip"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		}
	}
}
