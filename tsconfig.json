{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "dist-ts",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
} 